<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <exec src="/features/jpms/variables.xml"/>
    <exec src="/nodes/se/features/common/output.xml"/>
    <exec src="/features/multi-module/output.xml"/>

    <!-- media step -->
    <exec src="/nodes/se/features/media/output.xml"/>

    <!-- security step -->
    <exec src="/nodes/se/features/security/output.xml" if="${security}"/>

    <!-- database step -->
    <exec src="/nodes/se/features/database/output.xml" if="${db}"/>

    <!--  extra step  -->
    <exec src="/nodes/se/features/webclient/output.xml" if="${extra} contains 'webclient'"/>
    <exec src="/nodes/se/features/cors/output.xml" if="${extra} contains 'cors'"/>
    <exec src="/nodes/se/features/fault-tolerance/output.xml" if="${extra} contains 'fault-tolerance'"/>

    <!-- observability step -->
    <exec src="/nodes/se/features/metrics/output.xml" if="${metrics}"/>
    <exec src="/nodes/se/features/health/output.xml" if="${health}"/>
    <exec src="/nodes/se/features/tracing/output.xml" if="${tracing}"/>

    <!-- packaging step -->
    <exec src="/features/docker/output.xml" if="${docker}"/>
    <exec src="/features/kubernetes/output.xml" if="${k8s}"/>
    <exec src="/features/verrazzano/output.xml" if="${v8o}"/>
    <exec src="/features/jpms/output.xml" if="${jpms}"/>

    <!-- customize project step -->
    <exec src="/features/maven/output.xml" if="${build-system} == 'maven'"/>
    <exec src="/features/customize-project/output.xml"/>

</archetype-script>
