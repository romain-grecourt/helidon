<archetype-descriptor modelVersion="1.1" id="tracing-se">
    <properties>
        <property id="tracing.provider" type="enum" values="zipkin|jaeger" />
    </properties>
    <template-model if="${tracing}">
        <list id="dependencies">
            <item if="${tracing} == zipkin">
                <groupId>io.helidon.tracing</groupId>
                <artifactId>helidon-tracing-zipkin</artifactId>
            </item>
            <item if="${tracing} == jaeger">
                <groupId>io.helidon.tracing</groupId>
                <artifactId>helidon-tracing-jaeger</artifactId>
            </item>
        </list>
        <list id="helidon-imports">
            <item>io.helidon.tracing.TracerBuilder</item>
        </list>
        <item id="tracer-build">
            <![CDATA[
                .tracer(TracerBuilder.create(config.get("tracing"))
                                .serviceName("{{serviceName}}")
                                .registerGlobal(false)
                                .build())
]]>
        </item>
    </template-model>
    <file-sets>
        <file-set if="${tracing} == jaeger">
            <directory>src/main/resources/META-INF/services</directory>
            <includes>
                <include>io.jaeger.ServiceProvider</include>
            </includes>
        </file-set>
    </file-sets>
    <input-flow>
        <select property="tracing" text="Do you want tracing support">
            <choice>
                <select id="tracing" text="Select a tracing provider" max="1" min="1">
                    <choice value="zipkin" text="Zipkin" />
                    <choice value="jaeger" text="Jaeger" />
                </select>
            </choice>
        </select>
    </input-flow>
</archetype-descriptor>
