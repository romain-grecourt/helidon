<archetype-descriptor modelVersion="1.1" id="media-support-se">
    <properties>
        <property id="media-support" type="list" values="jackson,json-b,json-p,jax-p,jax-b" />
    </properties>
    <input-flow>
        <select text="Do you want to configure media type support (e.g. JSON, XML)">
            <choice>
                <select property="media-support" text="Select media type">
                    <choice text="JSON">
                        <select id="json" text="Select JSON provider">
                            <choice value="jackson" text="Jackson" />
                            <choice value="json-b" text="JSON-B" />
                            <choice value="json-p" text="JSON-P" />
                        </select>
                    </choice>
                    <choice text="XML">
                        <select id="xml" text="Select XML provider">
                            <choice value="jax-p" text="JAX-P" />
                            <choice value="jax-b" text="JAX-B" />
                        </select>
                    </choice>
                </select>
            </choice>
        </select>
    </input-flow>
</archetype-descriptor>
