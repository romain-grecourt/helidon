<archetype id="mp">
    <input>
        <selection id="base" text="Select archetype" max="1">
            <choice value="hello-world" text="Hello World Helidon MP project">
                <include id="hello-world-mp"/>
            </choice>
            <choice value="quickstart" text="Sample Helidon MP project that includes multiple REST operations">
                <include id="quickstart-mp"/>
            </choice>
            <choice value="database" text="Helidon MP application that uses JPA with an in-memory H2 database">
                <include id="database-mp"/>
            </choice>
            <choice value="bare" text="Bare Helidon MP project suitable to start from scratch">
                <include id="bare-mp"/>
            </choice>
        </selection>
    </input>
</archetype>