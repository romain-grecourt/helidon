<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <step label="Database" optional="true">
        <inputs>
            <boolean name="db" label="Database Support" default="false" optional="true">
                <inputs>
                    <enum name="jpa-impl" label="Select a JPA Implementation" default="hibernate" optional="true">
                        <option value="hibernate" label="Hibernate ORM"/>
                        <option value="eclipselink" label="Eclipse Persistence Services"/>
                    </enum>
                    <enum name="cp" label="Select a Connection Pool" default="hikaricp" optional="true">
                        <option value="hikaricp" label="HikariCP"/>
                        <option value="ucp" label="Universal Connection Pool"/>
                    </enum>
                    <enum name="server" label="Select a Database Server" default="h2" optional="true">
                        <option value="h2" label="H2 (in memory)"/>
                        <option value="mysql" label="MySQL"/>
                        <option value="oracledb" label="Oracle Database"/>
                    </enum>
                    <text name="pu-name" label="Persistence Unit Name" default="pu1" optional="true"/>
                    <text name="ds-name" label="Datasource Name" default="ds1" optional="true"/>
                    <boolean name="auto-ddl" label="Schema Initialization (auto DDL)" optional="true"/>
                </inputs>
            </boolean>
        </inputs>
    </step>
</archetype-script>
