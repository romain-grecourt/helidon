<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <step label="Media Support" optional="true">
        <!-- TODO https://github.com/oracle/helidon-build-tools/issues/698 -->
        <variables>
            <text path="media-support.default-json-lib" if="${ROOT.flavor} == 'se'">jsonp</text>
            <text path="media-support.default-json-lib" if="${ROOT.flavor} != 'se'">jackson</text>
        </variables>
        <inputs>
            <!-- TODO https://github.com/oracle/helidon-build-tools/issues/699 -->
            <list name="media-support" label="Select Media Support(s)" default="json" optional="true">
                <option value="json" label="JSON">
                    <inputs>
                        <enum name="json-lib" label="Select a JSON library" default="${default-json-lib}" optional="true">
                            <option value="jsonp" label="Jakarta JSON Processing" if="${ROOT.flavor} == 'se'" />
                            <option value="jackson" label="Jackson"/>
                            <option value="jsonb" label="Jakarta JSON Binding"/>
                        </enum>
                    </inputs>
                </option>
                <option value="multipart" label="MultiPart"/>
            </list>
        </inputs>
        <output>
            <!-- TODO https://github.com/oracle/helidon-build-tools/issues/609 -->
            <model>
                <value key="json-lib" if="${media-support} contains 'json'">${media-support.json-lib}</value>
                <value key="multipart" if="${media-support} contains 'multipart'">true</value>
            </model>
        </output>
    </step>
</archetype-script>
