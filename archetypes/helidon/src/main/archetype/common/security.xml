<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <step label="Security" optional="true">
        <inputs>
            <boolean name="security" label="Secure Application" default="false" optional="true">
                <inputs>
                    <list name="atn" label="Select Authentication Providers" optional="true">
                        <option value="oidc" label="OpenID Connect"/>
                        <option value="jwt" label="JSON Web Token"/>
                        <option value="google" label="Google Login"/>
                        <option value="http-signature" label="HTTP Signature"/>
                    </list>
                    <list name="atz" label="Select Authorization Providers" optional="true">
                        <option value="abac" label="ABAC"/>
                    </list>
                </inputs>
            </boolean>
        </inputs>
    </step>
</archetype-script>
