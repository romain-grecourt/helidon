<archetype id="authentication">
    <input>
        <option id="authentication" text="Do you want to configure authentication">
            <selection id="providers" text="Select authentication provider">
                <choice value="basic-auth" text="basic authentication">
                    <include id="basic-auth" />
                </choice>
                <choice value="digest-auth" text="digest authentication">
                    <include id="digest-auth" />
                </choice>
                <choice value="google-login" text="Google login">
                    <include id="google-login" />
                </choice>
                <choice value="header" text="Bearer header">
                    <include id="header" />
                </choice>
                <choice value="http-sign" text="HTTP signature header">
                    <include id="http-sign"/>
                </choice>
                <choice value="jwt" text="JSON Web Token">
                    <include id="jwt"/>
                </choice>
                <choice value="oidc" text="OpenID Connect">
                    <include id="oidc" />
                </choice>
            </selection>
        </option>
    </input>
</archetype>
