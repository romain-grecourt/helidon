<archetype-descriptor modelVersion="1.0" id="docker">

    <property id="dockerfile" type="boolean" />
    <property id="dockerfile.native" type="boolean" />
    <property id="dockerfile.jlink" type="boolean" />

    <template-model>
        <readme>
            <sections>
                <section order="50">
                    <![CDATA[
## Build the Docker Image

```
docker build -t {{artifactId}} .
```
]]>
                </section>
            </sections>
        </readme>
    </template-model>
    <template-set if="${dockerfile}">
        <directory>.</directory>
        <includes>
            <include>Dockerfile.mustache</include>
            <include>.dockerignore</include>
        </includes>
    </template-set>
    <template-set if="${dockerfile.native}">
        <directory>.</directory>
        <includes>
            <include>Dockerfile.native.mustache</include>
            <include>.dockerignore</include>
        </includes>
    </template-set>
    <template-set if="${dockerfile.jlink}">
        <directory>.</directory>
        <includes>
            <include>Dockerfile.jlink.mustache</include>
            <include>.dockerignore</include>
        </includes>
    </template-set>
    <input-flow>
        <select property="dockerfile" text="Do you want a Dockerfile" />
        <select property="dockerfile.native" text="Do you want a 'native-image' Dockerfile" if="${dockerfile}" />
        <select property="dockerfile.jlink" text="Do you want a 'jlink' Dockerfile" if="${dockerfile}" />
    </input-flow>
</archetype-descriptor>
