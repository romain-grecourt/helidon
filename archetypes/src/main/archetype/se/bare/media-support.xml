<archetype-flow xmlns="https://helidon.io/archetype/1.1"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://helidon.io/archetype/1.1 https://helidon.io/xsd/archetype-flow-1.1.xsd">

    <flow-step optional="true" label="Media Support">

        <flow-input type="option"
                    name="media-support"
                    label="Media type support"
                    prompt="Do you want to configure media type support (e.g. JSON, XML)">

            <flow-input type="option"
                        name="json"
                        label="JSON"
                        prompt="Do you want to use JSON">

                <flow-input type="select"
                            name="provider"
                            label="Select JSON provider">

                    <option value="jackson" label="Jackson"/>
                    <option value="jsonb" label="JSON-B"/>
                    <option value="jsonp" label="JSON-P"/>
                </flow-input>
            </flow-input>
            <flow-input type="option"
                        name="xml"
                        label="XML"
                        prompt="Do you want to use XML">

                <flow-input type="select"
                            name="provider"
                            label="Select XML provider">

                    <option value="jaxp" label="JAX-P"/>
                    <option value="jaxb" label="JAX-B"/>
                </flow-input>
            </flow-input>
            <output>
                <model>
                    <list id="dependencies">
                        <item if="${media-support/json/provider} == jackson">
                            <map>
                                <entry key="groupId">io.helidon.media</entry>
                                <entry key="artifactId">helidon-media-jackson</entry>
                            </map>
                        </item>
                        <item if="${media-support/json/provider} == jsonb">
                            <map>
                                <entry key="groupId">io.helidon.media</entry>
                                <entry key="artifactId">helidon-media-jsonb</entry>
                            </map>
                        </item>
                        <item if="${media-support/json/provider} == jsonp">
                            <map>
                                <entry key="groupId">io.helidon.media</entry>
                                <entry key="artifactId">helidon-media-jsonp</entry>
                            </map>
                        </item>
                        <item if="${media-support/xml/provider} == jaxp">
                            <map>
                                <entry key="groupId">io.helidon.media</entry>
                                <entry key="artifactId">helidon-media-jaxp</entry>
                            </map>
                        </item>
                        <item if="${media-support/xml/provider} == jaxb">
                            <map>
                                <entry key="groupId">io.helidon.media</entry>
                                <entry key="artifactId">helidon-media-jaxb</entry>
                            </map>
                        </item>
                    </list>
                </model>
            </output>
        </flow-input>
    </flow-step>
</archetype-flow>
