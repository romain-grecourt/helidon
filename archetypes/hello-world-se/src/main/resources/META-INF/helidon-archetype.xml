<archetype id="hello-world-se">
    <input>
        <define path="media-support/providers" value="jackson" />
        <define path="tracing" value="jaeger" />
        <include id="common" />
    </input>
    <output>
        <model>
            <readme>
                <description>Minimal Helidon SE project suitable to start from scratch.</description>
                <sections>
                    <section order="20">
                        <![CDATA[
                    ## Exercise the application

                    ```
                    curl -X GET http://localhost:8080/greet
                    {"message":"Hello World!"}
                    ```

                    ## Try health and metrics

                    ```
                    curl -s -X GET http://localhost:8080/health
                    {"outcome":"UP",...
                    . . .

                    # Prometheus Format
                    curl -s -X GET http://localhost:8080/metrics
                    # TYPE base:gc_g1_young_generation_count gauge
                    . . .

                    # JSON Format
                    curl -H 'Accept: application/json' -X GET http://localhost:8080/metrics
                    {"base":...
                    . . .
                    ```
                    ]]>
                    </section>
                </sections>
            </readme>
        </model>
    </output>
</archetype>
